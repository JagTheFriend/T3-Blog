// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Post {
    id          String @id @default(cuid())
    title       String
    content     String
    description String
    slug        String @unique

    authorId String

    hasEdited Boolean  @default(false)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    comments Comment[] @relation("post-comment")

    @@index([title])
    @@index([slug])
    @@index([authorId, title])
    @@index([title, content])
    @@index([slug, content])
    @@index([slug, title])
}

model Comment {
    id       String @id @default(cuid())
    content  String
    authorId String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    hasEdited Boolean  @default(false)

    post   Post   @relation("post-comment", fields: [postId], references: [id], onDelete: Cascade)
    postId String

    @@index([postId])
    @@index([id])
    @@index([postId, id])
    @@index([postId, content])
    @@index([content, authorId])
}
